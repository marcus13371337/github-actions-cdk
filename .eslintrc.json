{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint", "prefer-arrow"],
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
  "rules": {
    "prefer-arrow/prefer-arrow-functions": "error"
  },
  "env": {
    "browser": true,
    "es2021": true
  }
}
